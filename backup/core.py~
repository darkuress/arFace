import maya.cmds as cmds

class Core(object):
    """
    core class to define variables
    """
    def __init__(self,
                 cPrefix   = 'c',
                 prefix    = ['l', 'r'],
                 ctlSuffix = '_ctl',
                 jntSuffix = '_jnt'):
        """
        basic variables
        """
        self.cPrefix          = cPrefix
        self.prefix           = prefix
        self.ctlSuffix        = ctlSuffix
        self.jntSuffix        = jntSuffix
